<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <meta>
    <file-type type="string">FlightGear add-on menu bar items</file-type>
    <format-version type="int">1</format-version>
  </meta>

  <menubar-items>
    <menu>
     <name>simPit</name>
		<item>
			<name>Show PFD</name>
			<binding>
				<command>property-toggle</command>
				<property>/sim/rendering/draw-mask/aircraft</property>
			</binding>
		</item>

		<item>
			<name>Show / hide aircraft model</name>
			<key>Shift-F3</key>
			<binding>
				<command>property-toggle</command>
				<property>/sim/rendering/draw-mask/aircraft</property>
			</binding>
		</item>
		
    </menu> <!-- of simPit menu -->

  </menubar-items>
</PropertyList>